<script type= "text/javascript">


$(document).ready(function(){

$('.catfilter').click(function(el){
  var idd=el.target.id;
  $('input:checkbox[id^="'+idd+'1"]').click();
  if( $('input:checkbox[id^="'+idd+'1"]').hasClass('active'))
  {
    $('#'+idd).removeClass('active')
  }
  else
  {
  $('#'+idd).addClass('active')
    
  }

});

$('.morefilter').click(function(){
$('.filters_tabel').slideDown();
  $('.fewfilter').show();
  $('.morefilter').hide();
})
$('.fewfilter').click(function(){
$('.filters_tabel').slideUp();
  $('.fewfilter').hide();
  $('.morefilter').show();
})
})

