<% page_header "Your Conversations" %>
<p><%= link_to 'Start conversation', new_message_path, class: 'reg' %></p>

<div class="row" style="width:1170px;margin-left: -15px;margin-right: -15px;">
  <div class="col-sm-3" style="width:293px;height:124px;float:left">
    <ul class="nav nav-pills nav-stacked" style="margin-bottom: 0;padding-left: 0;list-style: none;margin-top: 0;">
      <%= mailbox_section 'inbox', @box %>
      <%= mailbox_section 'sent', @box %>
      <%= mailbox_section 'trash', @box %>
    </ul>
  </div>

  <div class="col-sm-9" style="width:877px;height:auto;float:left;box-sizing:border-box;padding-left:15px;padding-right:15px;min-height:1px;position: relative;">
    <% if @box == 'trash' %>
        <p><%= link_to 'Empty trash', empty_trash_conversation_path(:id), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'}%></p>
    <% end %>
    <ul class="list-group">
      <%= render partial: 'conversations/conversation', collection: @conversations %>
    </ul>

    <%= will_paginate %>
  </div>
</div>

